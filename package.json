{
	"name": "@cryxto/ioc-n-di",
	"version": "0.3.1",
	"description": "Another Typescript IoC container and dependency injection utility",
	"homepage": "https://github.com/Cryxto/ioc-n-di#readme",
	"bugs": {
		"url": "https://github.com/Cryxto/ioc-n-di/issues"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Cryxto/ioc-n-di.git"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"postinstall": "bun simple-git-hooks",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/bun": "^1.3.5",
		"bumpp": "^10.3.2",
		"bunup": "^0.16.11",
		"reflect-metadata": "^0.2.2",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"reflect-metadata": "^0.2.0",
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"module": "./dist/index.js",
	"simple-git-hooks": {
		"pre-commit": "bun run lint && bun run type-check"
	},
	"types": "./dist/index.d.ts"
}
